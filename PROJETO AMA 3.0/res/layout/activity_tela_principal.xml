<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="50px">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="AMA - Seu personal digital"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="Quer saber como está seu peso? Clique no botão abaixo e calcule seu IMC."
                android:textAlignment="center"
                android:textSize="7pt" />

            <Button
                android:id="@+id/btIMC"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#720052"
                android:text="Cálculo IMC"
                android:textColor="@color/white"
                android:textSize="7pt" />

            <DatePicker
                android:id="@+id/data"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="70dp" />

            <Button
                android:id="@+id/btalongamento"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#720052"
                android:text="Alongamento"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btdicasali"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#720052"
                android:text="Dicas de Alimentação"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btiniciar"
                android:layout_width="172dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="#720052"
                android:text="INICIAR"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>