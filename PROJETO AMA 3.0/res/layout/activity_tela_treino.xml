<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30px"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nomeappdicas"
            android:layout_width="293dp"
            android:layout_height="46dp"
            android:text="AMA - Seu personal digital"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity=""/>


        <Button
            android:id="@+id/btvoltainicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_toRightOf="@+id/nomeappdicas"
            android:text="Voltar"
            android:backgroundTint="#720052"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </RelativeLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="354dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:text="Seja bem vindo ao seu treino"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hoje você ira treinar:" />


                    <GridLayout
                        android:layout_width="394dp"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        android:rowCount="5">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_columnSpan="2"
                            android:backgroundTint="#720052"
                            android:gravity="center"
                            android:text="Pernas"
                            android:textColor="@color/white" />


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:backgroundTint="#720052"
                            android:gravity="center"
                            android:text="Braços"
                            android:textColor="@color/white" />


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:backgroundTint="#720052"
                            android:gravity="center"
                            android:text="Abdomen"
                            android:textColor="@color/white" />

                    </GridLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="20dp"
                    android:text="Sugestão de alimentação para hoje"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1">


                    <TableRow>

                        <TextView
                            android:layout_column="1"
                            android:layout_marginTop="10dp"
                            android:padding="3dip"
                            android:text="CAFÉ:  Pão integral com ovo mexido,suco de laranja integral." />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_column="1"
                            android:layout_marginTop="10dp"
                            android:padding="3dip"
                            android:text="ALMOÇO: Frango grelhado com legumes ao vapor." />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_column="1"
                            android:layout_marginTop="10dp"
                            android:padding="3dip"
                            android:text="JANTAR: Carne moída, arroz, feijão e salada." />
                    </TableRow>

                </TableLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="165dp"
                    android:layout_height="176dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="95dp"
                    android:backgroundTint="#720052"
                    android:text="Iniciar treino"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
